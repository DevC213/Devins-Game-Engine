            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Male" />
                <String fx:value="Female" />
            </FXCollections>
        </items>
    </ComboBox>
    <ComboBox fx:id="difficulty" layoutX="10.0" layoutY="512.0" prefHeight="25.0" prefWidth="588.0" promptText="Select Difficulty" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Normal" />
                <String fx:value="Daredevil" />
            </FXCollections>
        </items>
    </ComboBox>
    <!-- Player Information -->
    <GridPane GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.rowSpan="5">
        <TextField fx:id="cords" editable="false" visible="false" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES" />
        <TextArea fx:id="inventory" editable="false" visible="false" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="2" GridPane.rowSpan="3" GridPane.vgrow="SOMETIMES" />
        <TextField fx:id="money" editable="false" visible="false" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="5" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES">Money: 100</TextField>
        <TextField fx:id="health" editable="false" visible="false" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="6" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES">Health: 100</TextField>
        <TextField fx:id="defence" editable="false" visible="false" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="7" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES">Defence: 0</TextField>
        <TextField fx:id="weapon" editable="false" visible="false" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="8" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES">Copper Sword: 5</TextField>
