<GridPane stylesheets="/com/gamelogic/game.css" fx:id="mainGrid" prefHeight="960.0" prefWidth="1080" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamelogic.core.MainGameController">

    <Label id="welcomeText" GridPane.hgrow="SOMETIMES" GridPane.vgrow="SOMETIMES" />

    <!-- Text Areas -->
    <TextField fx:id="commandInput" editable="false" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="4" GridPane.vgrow="SOMETIMES" />
    <TextArea fx:id="script" editable="false" text=" Press 'start' to explore the island." GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="0" GridPane.rowSpan="4" />

    <Button fx:id="start" maxHeight="Infinity" maxWidth="Infinity" onAction="#gameStart" text="New Game" GridPane.columnIndex="3" GridPane.columnSpan="1" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="4" GridPane.vgrow="SOMETIMES" />
    <ComboBox fx:id="characterSelection" prefHeight="25.0" prefWidth="588.0" promptText="Select Character" GridPane.rowIndex="4">
