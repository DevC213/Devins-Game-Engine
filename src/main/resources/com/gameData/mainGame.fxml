<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="mainGrid" prefHeight="960.0" prefWidth="1080" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamelogic.core.MainGameController">

    <Label id="welcomeText" GridPane.hgrow="SOMETIMES" GridPane.vgrow="SOMETIMES" />

    <!-- Text Areas -->

    <TextArea fx:id="script" editable="false" text=" Press 'Start Game' to explore the island, if you have saved game, click 'load game' on pause menu first." GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.rowIndex="0" GridPane.rowSpan="4" />

    <Button fx:id="start" onAction="#gameStart" prefHeight="58.0" prefWidth="224.0" text="Start Game" GridPane.columnIndex="3" GridPane.columnSpan="1" GridPane.halignment="CENTER" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="4" GridPane.valignment="CENTER" GridPane.vgrow="SOMETIMES">
      <font>
         <Font size="24.0" />
      </font></Button>
    <ComboBox fx:id="characterSelection" prefHeight="25.0" prefWidth="588.0" promptText="Select Character" GridPane.rowIndex="4">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Male" />
                <String fx:value="Female" />
            </FXCollections>
        </items>
    </ComboBox>
    <ComboBox fx:id="difficulty" layoutX="10.0" layoutY="512.0" prefHeight="25.0" prefWidth="588.0" promptText="Select Difficulty" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Normal" />
                <String fx:value="Daredevil" />
            </FXCollections>
        </items>
    </ComboBox>
    <!-- Player Information -->
    <GridPane GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.rowSpan="4">
        <TextField fx:id="cords" editable="false" visible="false" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES" />
        <TextArea fx:id="inventory" editable="false" visible="false" GridPane.columnIndex="0" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" GridPane.vgrow="SOMETIMES" />
      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints percentHeight="20.0" />
         <RowConstraints percentHeight="80.0" />
      </rowConstraints>
    </GridPane>
    <!--Map-->
    <StackPane fx:id="miniMap" disable="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" GridPane.rowSpan="5" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"> </StackPane>
    <GridPane fx:id="enemySelection" alignment="CENTER" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="4">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Button fx:id="AOEAttack" disable="true" mnemonicParsing="false" onAction="#AOE" prefHeight="26.0" prefWidth="131.0" text="AOE" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
           <font>
               <Font name="Times New Roman" size="12.0" />
           </font>
        </Button>
        <Button fx:id="singleAttack" disable="true" mnemonicParsing="false" onAction="#attackMonster" prefHeight="25.0" prefWidth="219.0" text="Attack" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
        <ComboBox fx:id="enemyList" disable="true" prefHeight="25.0" prefWidth="492.0" promptText="Choose Enemy" GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
    </GridPane>
    <GridPane fx:id="healthItems" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="4">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <ComboBox fx:id="healthItemList" prefHeight="25.0" prefWidth="236.0" promptText="Health Item" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
        <Button mnemonicParsing="false" onAction="#useHealingItem" prefHeight="25.0" prefWidth="179.0" text="Use Item" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
    </GridPane>
    <GridPane GridPane.columnSpan="2" GridPane.rowIndex="9">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <TextField fx:id="weapon" editable="false" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="SOMETIMES" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES">Copper Sword: 5
        </TextField>
        <TextField fx:id="defence" editable="false" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES">
            Defence: 0
        </TextField>
    </GridPane>
    <GridPane GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="9">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <TextField fx:id="health" editable="false" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES">
            Health: 100
        </TextField>
        <TextField fx:id="money" editable="false" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="SOMETIMES" GridPane.rowSpan="1" GridPane.vgrow="SOMETIMES">Money: 100
        </TextField>
    </GridPane>

    <columnConstraints>
        <ColumnConstraints percentWidth="25.0" />
        <ColumnConstraints percentWidth="25.0" />
        <ColumnConstraints percentWidth="25.0" />
        <ColumnConstraints percentWidth="25.0" />
        <ColumnConstraints />
    </columnConstraints>
   <rowConstraints>
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
       <RowConstraints percentHeight="10.0" />
   </rowConstraints>
</GridPane>
